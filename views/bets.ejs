<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <div class="mb-3">
                    <input type="text" id="usernameFilter" class="form-control mb-2" placeholder="Filter by username">
                    <select id="gameSelect" class="form-control mb-2">
                        <option value="">All Games</option>
                        <% games.forEach(game => { %>
                            <option value="<%= game.gameName %>"><%= game.gameName %></option>
                        <% }); %>
                    </select>
                    <div class="row">
                        <div class="col-md-6 mb-2">
                            <input type="date" id="startDate" class="form-control" placeholder="Start Date">
                        </div>
                        <div class="col-md-6 mb-2">
                            <input type="date" id="endDate" class="form-control" placeholder="End Date">
                        </div>
                    </div>
                    <button id="filterButton" class="btn btn-primary">Filter</button>
                    <button id="resetButton" class="btn btn-secondary ml-2">Reset</button>
                </div>
                <table class="table table-bordered table-striped">
                    <thead>
                    <tr>
                        <th>Username</th>
                        <th>Game</th>
                        <th>Game Code</th>
                        <th>Game Type</th>
                        <th>RTP Rate</th>
                        <th>Payout</th>
                        <th>Bet Amount</th>
                        <th>Rolling Rate</th>
                        <th>Balance After Spin</th>
                        <th>Date</th>
                    </tr>
                    </thead>
                    <tbody>
                    <% bets.forEach(bet => { %>
                        <tr>
                            <td><%= bet.username %></td>
                            <td><%= bet.game %></td>
                            <td><%= bet.gameCode %></td>
                            <td><%= bet.gameType %></td>
                            <td><%= (bet.rtpRate * 100).toFixed(2) %>%</td>
                            <td>$<%= (bet.payout / 100).toFixed(2) %></td>
                            <td>$<%= (bet.betAmount / 100).toFixed(2) %></td>
                            <td><%= (bet.rollingRate * 100).toFixed(2) %>%</td>
                            <td>$<%= (bet.balanceAfterSpin / 100).toFixed(2) %></td>
                            <td><%= bet.createdAt %></td>
                        </tr>
                    <% }); %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>